Task{"freebsd-src-regression-suite",
    name = "freebsd-src-dtrace-regression-suite",
    description = "Run the DTrace regression test suite inside a VM",
    inputs = {
        vm_image = "freebsd-src-dtrace-regression-suite-vm-image",
